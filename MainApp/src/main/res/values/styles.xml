<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RedboxButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/touchpadbutton</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:shadowColor">#B0000000</item>
        <item name="android:shadowRadius">4</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">bottom|center</item>
    </style>

    <style name="RedboxButtonUK" parent="RedboxButton">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="ExtraButtonsLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ExtraButton">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/touchpadbutton</item>
        <item name="android:typeface">monospace</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center|right</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ExtraButtonAbout" parent="ExtraButton">
        <item name="android:layout_width">132dp</item>
        <item name="android:background">@drawable/touchpadbutton</item>
        <item name="android:text">\?</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="TouchPadButtons" parent="android:Widget.ImageButton">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:background">@drawable/touchpadbutton</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="TouchPadRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>